{
  "name": "node-module-template",
  "version": "0.0.0",
  "description": "$DESCRIPTION",
  "keywords": [],
  "homepage": "https://github.com/forivall/$NAME",
  "bugs": {
    "url": "https://github.com/forivall/$NAME/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:forivall/$NAME.git"
  },
  "license": "ISC",
  "author": "Emily Marigold Klassen <forivall@gmail.com>",
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b -w",
    "format": "npm run format:import-sort && npm run format:prettier",
    "format:import-sort": "import-sort --write 'src/**/*.ts'",
    "format:prettier": "prettier --write 'src/**/*.ts'",
    "lint": "tslint --format stylish -p src/tsconfig.json",
    "lint-staged": "lint-staged",
    "prepare": "npm run build",
    "test": "ava",
    "posttest": "npm run lint",
    "test-ci": "npm run test-cov",
    "posttest-ci": "nyc report --reporter=text-lcov | coveralls",
    "test-cov": "nyc ava",
    "posttest-cov": "npm run posttest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx -p node@8 lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": "tslint --format stylish"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": false,
    "printWidth": 89,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "dependencies": {},
  "devDependencies": {
    "ava": "^1.2.0",
    "coveralls": "^3.0.2",
    "husky": "^1.3.1",
    "import-sort-cli": "^5.2.0",
    "import-sort-parser-typescript": "^5.0.0",
    "import-sort-style-module": "^5.0.0",
    "lint-staged": "^8.1.1",
    "nyc": "^13.1.0",
    "prettier": "^1.16.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-xo": "^0.13.0",
    "typescript": "^3.2.4"
  },
  "peerDependencies": {},
  "bundleDependencies": [],
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "importSort": {
    ".ts": {
      "parser": "typescript",
      "style": "module"
    }
  }
}
